<!-- javascript for this view. -->
{{#extend 'scripts'}}
<script>
  window.StatusCode = ({{status}} || 500)
</script>
{{/extend}}

<h1>{{status}}</h1>
<h3>{{friendly}}</h3>

<div class="message">
  <p class="kthLovesGeeks">HTTP {{status}}: {{message}}</p>
  {{#if error.stack}}
    <pre>{{error}}</pre>
  {{/if}}
</div>
